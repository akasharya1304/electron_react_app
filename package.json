{
  "name": "office-app",
  "version": "1.0.1",
  "description": "App for making JD Polybag Artwork & Printout",
  "author": "akash13arya",
  "build": {
    "appId": "office.app.electron-cra",
    "win": {
      "icon": "build/icon.png"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "publish": {
      "provider": "github",
      "repo": "electron_react_app",
      "owner": "akasharya1304"
    },
    "repository": {
      "type" : "git",
      "url" : "https://github.com/akasharya1304/electron_react_app.git"
    },
    "directories": {
      "buildResources": "assets"
    }
  },
  "private": true,
  "dependencies": {
    "@electron/remote": "^2.0.1",
    "@emotion/react": "^11.7.1",
    "@emotion/styled": "^11.6.0",
    "@material-ui/core": "^4.12.3",
    "@mui/icons-material": "^5.3.1",
    "@mui/material": "^5.3.1",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "dotenv": "^16.0.0",
    "electron-is-dev": "^2.0.0",
    "electron-updater": "^4.6.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.2.1",
    "react-scripts": "5.0.0",
    "react-to-print": "^2.14.4",
    "web-vitals": "^2.1.4"
  },
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test",
    "react-eject": "react-scripts eject",
    "electron-pack": "build --em.main=build/electron.js",
    "electron-build": "electron-builder",
    "release": "npm run react-build && electron-builder --publish=never",
    "deploy": "electron-builder build --win --publish=always",
    "build": "npm run react-build && npm run electron-build --publish=never",
    "electron-start": "wait-on tcp:3000 && electron .",
    "electron": "concurrently -k \"cross-env BROWSER=none npm run react-start\" \"npm run electron-start\""
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "electron": "^16.0.7",
    "electron-builder": "^22.14.5",
    "wait-on": "^6.0.0"
  }
}
